\end{eqnarray}

\end_inset

If Assumption 
\begin_inset CommandInset ref
LatexCommand ref
reference "assump:additional"
plural "false"
caps "false"
noprefix "false"

\end_inset

 also holds, then the taxes are approximated by
\begin_inset Formula 
\begin{align}
t & \approx\frac{\bar{\gamma}(1+\sigma)+e-\frac{p}{\bar{s}\bar{\zeta}^{c}}Cov\left[g(z),s_{pref}(z)\right]}{1+\frac{1}{\bar{s}\bar{\zeta}^{c}}Cov\left[g(z),s_{pref}(z)\right]}\label{eq:t opt 1}\\
T'(z^{*}) & \approx\frac{\frac{1}{\zeta_{z}^{c}zh(z^{*})}\mathbb{E}\left[(1-g(z))|z\geq z^{*}\right]}{1+\frac{1}{\zeta_{z}^{c}(z^{*})zh(z^{*})}\mathbb{E}\left[(1-g(z))|z\geq z^{*}\right]}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The expression in Equation 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:t opt 1"
plural "false"
caps "false"
noprefix "false"

\end_inset

